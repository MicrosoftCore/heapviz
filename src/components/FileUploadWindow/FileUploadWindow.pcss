.file-upload-window {
    padding: 25px;
    display: flex;
    height: calc(100vh - 75px);
    position: relative;

    &:before {
        content: '';
        width: calc(100% - 50px);
        height: calc(100% - 50px);
        border: 2px dashed grey;
        position: absolute;
    }

    &.dragging:before {
        border-color: lightgreen;
    }

    & a {
        cursor: pointer;
    }

    & .spacer {
        margin: 50px 0;
    }
}

.instruction-text {
    text-align: center;
    width: calc(100% - 50px);
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}