.App {
  position: relative;
}

.message {
  position: absolute;
  width: 100%;
  height: 100%;
  background: white;
  opacity: 0;
  transition: opacity 0.3s ease-out, z-index 0s 0.3s;
  z-index: 0;

  &.visible {
    opacity: 1;
    transition: opacity 0.3s ease-out, z-index 0s 0s;
    z-index: 1;
  }

  & .text {
    text-align: center;
    width: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}