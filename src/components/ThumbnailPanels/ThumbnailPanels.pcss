.ThumbnailPanels {
    margin: 0 auto;
    max-width: 700px;

    & .panels {
        display: grid;
        grid-template-columns: 31.5% 35% 31%;

        & img {
            transition: transform 0.3s ease-out;
        }

        & img:hover {
            transform: scale(1.1);
        }
    }

    & h3 {
        font-size: 1.3rem;
    }
}